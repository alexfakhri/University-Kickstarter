

<h2> <%= @university.name %> </h2>
<p> <%= @university.description %> </p>	


<%= link_to "Add a project", new_university_project_path(@university), class: "btn btn-success" %> 

<h3>Live projects</h3>

   <div class="container">
      <div class="row">
					<% if @university.projects.any? %>
					<% @university.projects.each do |project|%>
					<div class="col-sm-6 col-md-4">
        <div class="thumbnail">
        <img data-src="image_tag project.image.url(:thumb)">
        <%= image_tag project.image.url(:thumb) %>
        <div class="caption">
							<h3> Title: <%= link_to project.title, project_path(project) %></h3>
					    <p> Description: <%= project.description %> </p>	
					    <p> Fundraising target: Â£<%= project.target_amount %></p>
					    <p> Campaign end date: <%= project.end_date.strftime("%d/%m/%Y") %></p>
					    <div class="progress">
  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%= number_to_percentage(project.donation_percentage, precision: 0) %>">
    <%= number_to_percentage(project.donation_percentage, precision: 0) %>
  </div>
</div>
      <p><%= link_to "Donate to project",  new_project_donation_path(project), class: "btn btn-success" %>  </p>
      </div>
       </div>
       </div>

    <% end %>
  <% else %>
    No projects yet
  <% end %>
  </div>
</div>