<div class="container">
	<div class="text-center">
		<h1 class=""><%= @project.title %></h1>
		<p class="lead">by <%= @project.university.name %></p>
	</div>
	<div class="progress">
		<div class="progress-bar" role="progressbar" aria-valuenow="<%= @project.donation_percentage %>" aria-valuemin="0"
			aria-valuemax="100" style="width:  <%= number_to_percentage(@project.donation_percentage, precision: 0) %>;"> <span class="sr-only"><%= number_to_percentage(@project.donation_percentage, precision: 0) %> Complete</span>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row-fluid">
			<div class="span8">
				<%= image_tag @project.image.url(:large) %>
			</div>
			<div class="span4">
				<h1><%= number_to_currency(@project.total_donations, unit: :£)%></h1>
				<h3>raised so far</h3>
				<h1><%= number_to_currency(@project.target_amount, unit: :£)%></h1>
				<h3>target</h3>
				<h1>54</h1>
				<h3>days left</h3>
				<h5>Project ends on: <%= @project.end_date.strftime("%d/%m/%Y") %></h5>
				<%= button_to "Donate", new_project_donation_path(@project), :class => "btn btn-success btn-lg", :method => :get %>
			</div>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3 class="panel-title">Description for: <%= @project.title %></h3>
		</div>
		<div class="panel-body" contenteditable="false"><%= @project.description %></div>
	</div>

</div>